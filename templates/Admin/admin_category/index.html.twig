{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block body %}
<div class="panel_main">
    <div id="category_main_title">
        <h1 class="titlePanel">Gestion de vos categories</h1>
        <p class="mb-5">Ici gerer vos différentes catégories d'article pour un shop bien organisé !</p>
    </div>
    <div id="category_main_content">
        <div id="category_main_content_add" class="mb-5">
            <a href="{{ path('admin_category_new') }}" class="adminBtn">Ajoutez une catégorie</a>
        </div>
        <div class="category_main_content_list">
            <table class="table table-hover text-center">
                <thead class="text-center">
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.title }}</td>
                        <td>
                            <a href="{{ path('admin_category_edit', { 'id': category.id }) }}"><i class="fa-solid fa-pen-clip editIcon"></i></a>
                            <a href=""><i class="fa-solid fa-trash-can deleteIcon"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
